menu 'rw-auto'
    config TINATEST_STRESS_RW_RW_AUTO_ENABLE
        bool "Enable"
        default n

    if TINATEST_STRESS_RW_RW_AUTO_ENABLE
        config TINATEST_STRESS_RW_RW_AUTO_COMMAND
            string "command"
            default "rwcheck -a -b 2k -e 512m -t 1 -d /mnt/UDISK"

        config TINATEST_STRESS_RW_RW_AUTO_STDIN
            string "stdin"
            default ""

        config TINATEST_STRESS_RW_RW_AUTO_FSTDIN
            string "fstdin"
            default ""

        comment "<N> to Default && <Y> to customize"
        config TINATEST_STRESS_RW_RW_AUTO_INFO
            bool "INFO"
            default y

        if TINATEST_STRESS_RW_RW_AUTO_INFO
            config TINATEST_STRESS_RW_RW_AUTO_DATE
                bool "date"
                default y if TINATEST_SYS_LOCAL_INFO_DATE

            config TINATEST_STRESS_RW_RW_AUTO_RESOURCE
                bool "resource"
                default y if TINATEST_SYS_LOCAL_INFO_RESOURCE
        endif

        comment "<N> to Default && <Y> to customize"
        config TINATEST_STRESS_RW_RW_AUTO_LIMIT
            bool "LIMIT"
            default y

        if TINATEST_STRESS_RW_RW_AUTO_LIMIT
            config TINATEST_STRESS_RW_RW_AUTO_RUN_TIMES
                string "run_times"
                default "Default"

            config TINATEST_STRESS_RW_RW_AUTO_RUN_ALONE
                bool "run_alone"
                default y

            config TINATEST_STRESS_RW_RW_AUTO_RUN_PARALLEL
                bool "run_parallel"
                default y if TINATEST_SYS_LOCAL_LIMIT_RUN_PARALLEN

            config TINATEST_STRESS_RW_RW_AUTO_MAY_REBOOT
                bool "may_reboot"
                default y if TINATEST_SYS_LOCAL_LIMIT_MAY_REBOOT

            config TINATEST_STRESS_RW_RW_AUTO_RUN_TIME_SEC
                string "run_time_sec"
                default "Default"

            config TINATEST_STRESS_RW_RW_AUTO_RUN_TIME_MIN
                string "run_time_min"
                default "Default"

            config TINATEST_STRESS_RW_RW_AUTO_RUN_TIME_HOUR
                string "run_time_hour"
                default "Default"
        endif
    endif
endmenu
